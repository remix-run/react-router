{
  "files": ["index.tsx"],
  "exclude": ["dist/**/*"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",

    "declaration": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true,

    "outDir": ".",
    "rootDir": "."
  }
}
