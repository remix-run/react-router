{
  "include": ["**/*.ts", "**/*.tsx", "package.json"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
