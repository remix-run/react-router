{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist",
    "noEmit": true,
    "resolveJsonModule": true,

    // Avoid naming conflicts between lib.dom.d.ts and globals.ts
    "skipLibCheck": true
  }
}
