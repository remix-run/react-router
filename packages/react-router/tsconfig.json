{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",

    "strict": true,
    "jsx": "react",

    "declaration": true,

    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "react-router": ["./index.ts"]
    }
  }
}
