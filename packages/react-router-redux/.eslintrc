{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["import", "react"],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "rules": {
    "prefer-arrow-callback": 2,
    "react/display-name": 0
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "react": {
      "version": "15"
    }
  }
}
