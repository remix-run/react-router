{
  "include": ["vite.config.ts", "__tests__"],
  "compilerOptions": {
    "esModuleInterop": false,
    "skipLibCheck": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "Preserve",
    "lib": ["ES2022"],
    "noEmit": true
  }
}
