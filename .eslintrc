{
  "extends": ["react-app"],
  "rules": {
    "import/first": "off",
    "@typescript-eslint/consistent-type-imports": "error"
  },
  "ignorePatterns": ["public/**/*"],
  "overrides": [
    {
      "files": ["**/__tests__/**"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"]
    },
    {
      "files": ["integration/**/*.*"],
      "rules": {
        "react-hooks/rules-of-hooks": "off"
      },
      "env": {
        "jest/globals": false
      }
    }
  ],
  "reportUnusedDisableDirectives": true
}
